@model List<DDTBaiThucHanh486.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GIỎ HÀNG CỦA BẠN</h2>
<div class="content">
    <div class="section group">
        @if (Model.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <td>Mã SP</td>
                        <td>Tên SP</td>
                        <td>Ảnh SP</td>
                        <td>Số lượng</td>
                        <td>Đơn giá</td>
                        <td>Thành tiền</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.SanPham.SanPhamID</td>
                            <td>@item.SanPham.TenSanPham</td>
                            <td><img src="~/Content/Images/@item.SanPham.Hinh" /></td>
                            <td><input type="number" class="txtQuantity" data-id="@item.SanPham.SanPhamID" value="@item.Quantity" /></td>
                            <td>@item.SanPham.DonGia</td>
                            <td>@(Convert.ToDecimal(item.SanPham.DonGia * item.Quantity)</td>
                            <td><a href="#" data-id="@item.SanPham.SanPhamID" class="btn-delete">Xoá</a></td>
                        </tr>
                    }

                </tbody>
            </table>

            <button id="btnContinue" class="btn">Tiếp tục mua hàng</button>
            <button id="btnUpdate" class="btn">Cập nhật giỏ hàng</button>
            <button id="btnDeleteAll" class="btn">Xoá giỏ hàng</button>
            <button id="btnPayment" class="btn">Thanh toán</button>
        }
        else
        {
            <span class="alert alert-danger">Chưa có sản phẩm nào trong giỏ hàng</span>
        }

    </div>
</div>

